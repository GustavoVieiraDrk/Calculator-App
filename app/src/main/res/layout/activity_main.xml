<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/DisplayNum"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:ellipsize="start"
        android:singleLine="true"
        android:text="" />

    <TextView
        android:id="@+id/DisplayResult"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="end"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Clear"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="C"
            android:textSize="20sp"
            android:layout_weight="1"
            android:onClick="ActionClear"/>

        <TextView
            android:id="@+id/Backspace"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="Back"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/Mult"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="*"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/Subt"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/NumSeven"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="7"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumEigth"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumNine"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="9"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumSum"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/NumFour"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NumFive"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumSix"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="6"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/Divide"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="/"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/NumOne"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumTwo"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumThree"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="3"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/NumDot"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="."
            android:textSize="20sp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/empty"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="GuS"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumZero"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="0"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/G"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="^-^"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/NumEqual"
            android:layout_margin="0.5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:text="="
            android:textSize="20sp"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>
